<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>승뮤니티</title>
    <link rel="stylesheet" href="\main.css">
</head>
<%- include('nav.ejs') %>
<body class="grey-bg">
    <div class="section2">
        <div style="height:60px;"></div>
        <form class="form-box" action="/add" method="POST" enctype="multipart/form-data">
            <h4>글쓰기</h4>
            <input style=" color: white;" name="title" placeholder="제목" required>
            <!-- <input style="height: 150px;" name="content" placeholder="본문" required> -->
            <textarea style="white-space: pre-line; resize: none; width: 100%;
            height: 150px; background: transparent; border: 2px solid rgba(255,255,255,0.5);
            padding: 5px 0px 0px 5px; border-radius: 5px; color: white;" name="content"  placeholder="본문, 엔터눌러서 줄바꿈" required></textarea>
            <input style="margin-bottom: 5px;" type="file" name="img1" accept="image/* video/*">
            <button style="background: transparent;  padding: 10px 5px 0px 0px; float: right;" 
            type="submit"><ion-icon style="color: white;" name="paper-plane-outline"></ion-icon></button>
            <p style="clear: both;"></p>
        </form> 
    </div>  
    <script type="module">
        import {makeSnowflake2} from '/snow.js';

        window.onload = function(){
            for (let i = 0; i < 40; i++){
                setTimeout(makeSnowflake2(), 500 * i);
            }
        }      
    </script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>