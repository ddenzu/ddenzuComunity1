<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>승뮤니티</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="\main.css">
    <style>
      :root{
        scroll-behavior:auto
      }
    </style>
</head>
<%- include('nav.ejs', { isRead: isRead }) %>
<body>
    <div class="section2" style="display: flex;justify-content: center; height: 100vh;">
    <div style="color: white; width: 90%;margin-top: 80px;">
    <div class="container p-3 detail">
        <div class="row">
          <div class="col-3" style="padding: 0 8px 0 0;">
            <ul class="list-group chat-list" id="kk">
                <% for (let i = 0; i < data.length; i++ ){%>
                    <li class="list-group-item" data-id="<%= data[i]._id %>" data-i="<%= i %>" 
                      data-cnt=0>
                        <h6 style="font-size: 15px;"><%= counterpart[i] %></h6>
                        <button style="margin: auto; display: block;" class="dele" data-id="<%= data[i]._id %>">
                          <ion-icon style="font-size: 20px; color: #87FCC4;"
                          name="trash-outline"></ion-icon>
                        </button>
                    </li>
                <%}%>
             </ul>
           </div>
      
           <div class="col-9 p-0" >
             <div class="chat-room">
                <ul class="list-group chat-content">
                  <div class="infomation">
                    <p style="font-weight: bold; color: #1fd39a;
                    padding: 5px; font-size: 20px;">⛔사용방법⛔<br>
                      1. 왼쪽 선택창에서 채팅방을 선택하세요<br>
                    </p>
                  </div>
                </ul>
              <div class="input-group">
                <input class="form-control" style="background: rgba(255, 255, 255, 0.1);
                color: white; border: none; height: 38px;" id="chat-input"
                placeholder="엔터 누르면 전송">
                <button class="btn chat-btn" style="padding: 0px;" id="send">
                  <ion-icon style="color: white; padding-top: 5px; font-size: 25px;" 
                  name="paper-plane-outline"></ion-icon>
                </button>
              </div>
            </div>
          </div>
        </div>
    </div> 
  </div>
    <script type="module">
      import {makeSnowflake2} from '/snow.js';
      window.onload = function(){
          for (let i = 0; i < 40; i++){
              setTimeout(makeSnowflake2(), 500 * i);
          }
      }       
    </script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script>
      $(document).ready(function() {
        let curChatroomId;
        let delChatroomId
        let eventSource;
        // 페이지 로드 시 상대방과 매칭
        if('<%= arrow %>'!=0){
          let chatroomList = Array.from(document.querySelectorAll('.list-group-item'));
          chatroomList.forEach((item, index)=>{
            if(item.dataset.id=='<%= arrow %>'){
              setTimeout(()=> $(item).trigger('click') ,200);
            }
          });
        } 
        
        // 채팅방 목록 클릭 시 (상대방과 매칭)
        $('.list-group-item').click(function(e){
          curChatroomId = this.dataset.id;
          $('.chat-content').html('');
          if(eventSource != undefined){
            eventSource.close()
          }
          var currentUser  = '<%= cur %>';
          eventSource = new EventSource('/chat/messages/' + curChatroomId); // get요청
          eventSource.addEventListener('test', function(e){
            var messages = JSON.parse(e.data);
            messages.forEach(function(message) {
                var isCurrentUser = (message.userid === currentUser);
                var chatBoxClass = isCurrentUser ? 'chat-box mine' : 'chat-box';
                var timeBoxClass = isCurrentUser ? 'mine time-box' : 'time-box';
                $('.chat-content').append(`
                    <li><span class="${chatBoxClass}">${message.content}</span></li>
                    <li><span class="${timeBoxClass}">${message.date}</span></li>
                `);
            });
            var scrollHeight = document.querySelector('.chat-content').scrollHeight;
            $('.chat-content').scrollTop(scrollHeight + 100); // 여기서 스크롤맨밑으로 (데이터를 수신했을때)
          })
          const elementsToRemove = document.querySelectorAll('.list-group-item');
          elementsToRemove.forEach(a => {
            a.classList.remove('even')
            a.classList.remove('odd')
          })
          document.querySelectorAll('.list-group-item')[this.dataset.i].classList.add('odd');
        })

        // 메세지 전송 버튼 클릭
        $('#send').click(function(){
            var messageContent = $('#chat-input').val();
            var messageData = {
                parent : curChatroomId,
                content : messageContent,
            }
            $.post('/chat/messages', messageData).done((a) => {
            })
            $('#chat-input').val('');
        })

        // 엔터로 메세지 전송
        $('.input-group').keypress(function(e) {
            if (e.keyCode === 13) {
              $('#send').trigger('click');
            }
        });

        // 채팅방 삭제 버튼 클릭
        $('.dele').click(function(e){
          delChatroomId = this.dataset.id  
          if (confirm('정말로 삭제하시겠습니까?')==true){
            var deleteData = {삭제id : delChatroomId};
            fetch('/chat', {
            method : 'DELETE',
            async : false,
            headers : {
                'Content-Type' : 'application/json'
            },
            body : JSON.stringify(deleteData)
            })
            .then((r)=>r.text())
            .then((r)=>{
              location.replace('/chat')
            }) 
          }
        })
        
        // 입력 필드 클릭 시 스크롤 조정
        $('.form-control').click(function(){
          setTimeout(()=>{
            window.scrollTo(0, 30)
          },200)
        })
      })
    </script>
</body>
</html>